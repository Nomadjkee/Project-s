@using Vidly.ViewModel
@model SomeFilmViewModel
@{
    ViewBag.Title = "Index";
}

<div>
    <form method="get">
        <table class=" table table-bordered">
            <thead>
                <tr>
                    <th>
                        <h3>
                            №
                        </h3>
                    </th>
                    <th>
                        <h3>
                            Name
                        </h3>
                    </th>
                    <th>
                        <h3>
                            Type
                        </h3>
                    </th>
                    <th>
                        <h3>
                            Year
                        </h3>
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @Html.ActionLink(item.Name,"Details",item)                       
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.Year
                    </td>
                </tr>
            }
        </table>
    </form>
</div>

